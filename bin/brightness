#!/bin/sh
#
# Description:  Brightness control script for Unix systems.
#

cmd=$1
value="${2}%"
OS=$(uname -s)

case "$OS" in
	Linux)
		case "$cmd" in
			""|g|get) echo $(( $(brightnessctl --exponent get) * 100 / $(brightnessctl max) )) ;;
			s|set) brightnessctl --quiet --exponent set  $value;;
			i|inc|increment) brightnessctl --quiet --exponent set 5%+ ;;
			d|dec|decrement) brightnessctl --quiet --exponent set 5%- ;;
			*)
				echo "Error: Uknown command: $cmd" >&2
				exit 1
				;;
		esac
		;;
	# OpenBSD) echo "OS is OpenBSD"
		# ;;
	*)
		echo "Error: Non-supported Operating System $OS" >&2
		exit 1
		;;
esac
