#!/bin/sh
#
# Description: This script shows, and control the system volume using the
#              $HOME/bin/volume script
#

# Set Volume based on mouse command
case $BLOCK_BUTTON in
	1) $TERMINAL "alsamixer;" ;;
	3) volume toggle;;
	4) volume inc;;
	5) volume dec;;
esac

# Set icon set based on style.
case $UI_ICON in
	emoji)
		VOL_MUTE_ICON=ðŸ”‡
		VOL_LOW_ICON=ðŸ”ˆ
		VOL_MID_ICON=ðŸ”‰
		VOL_HIGH_ICON=ðŸ”Š
		;;
	nerd | *)
		VOL_MUTE_ICON=ï‘¦
		VOL_LOW_ICON=ï€¦
		VOL_MID_ICON=ï€§
		VOL_HIGH_ICON=ï€¨
		;;
esac

# Check if sound is muted
[ $(volume status) = "off" ] && echo $VOL_MUTE_ICON && exit

volume="$(volume get)"

# Set Proper icon
if [ $volume -lt 30 ]; then
	icon=$VOL_LOW_ICON
elif [ $volume -lt 70 ]; then
	icon=$VOL_MID_ICON
else
	icon=$VOL_HIGH_ICON
fi

echo "$icon  $volume%"

