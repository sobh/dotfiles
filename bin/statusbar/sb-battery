#!/bin/sh

#---- Functions ----------------------------------------------------------------
UI_ICON=nerd
# This function return the emoji clock value closest to the current time.
get_nerd_icon(){
	status=$1	# Battery Status ( Full | Charging | Discharginng | Not Charging )
	charge=$2	# Battery Charge Level

	# First Cover corner cases
	case $status in
		Full ) icon='ÔÉß' ;;
		Charging )
			if   [ $charge -le 5 ]; then icon='Û∞¢ü';	# nf-md-battery_charging_outline	\UF089F
			elif [ $charge -le 15 ]; then icon='Û∞¢ú';	# nf-md-battery_charging_10		\UF089C
			elif [ $charge -le 25 ]; then icon='Û∞ÇÜ';	# nf-md-battery_charging_20		\UF0086
			elif [ $charge -le 35 ]; then icon='Û∞Çá';	# nf-md-battery_charging_30		\UF0087
			elif [ $charge -le 45 ]; then icon='Û∞Çà';	# nf-md-battery_charging_40		\UF0088
			elif [ $charge -le 55 ]; then icon='Û∞¢ù';	# nf-md-battery_charging_50		\UF089D
			elif [ $charge -le 65 ]; then icon='Û∞Çâ';	# nf-md-battery_charging_60		\UF0089
			elif [ $charge -le 75 ]; then icon='Û∞¢û';	# nf-md-battery_charging_70		\UF089E
			elif [ $charge -le 85 ]; then icon='Û∞Çä';	# nf-md-battery_charging_80		\UF008A
			elif [ $charge -le 95 ]; then icon='Û∞Çã';	# nf-md-battery_charging_90		\UF008B
			else	# [ $charge -ge 96 ]
				icon='Û∞ÇÖ	'			# nf-md-battery_charging_100		\UF0085
			fi
			;;
		*)	# 'Discharging' | 'Not charging'
			if   [ $charge -le 5 ]; then icon='Û∞Çé';	# nf-md-battery_outline	\UF008E
			elif [ $charge -le 15 ]; then icon='Û∞Å∫';	# nf-md-battery_10	\UF007A
			elif [ $charge -le 25 ]; then icon='Û∞Åª';	# nf-md-battery_20	\UF007B
			elif [ $charge -le 35 ]; then icon='Û∞Åº';	# nf-md-battery_30	\UF007C
			elif [ $charge -le 45 ]; then icon='Û∞ÅΩ';	# nf-md-battery_40	\UF007D
			elif [ $charge -le 55 ]; then icon='Û∞Åæ';	# nf-md-battery_50	\UF007E
			elif [ $charge -le 65 ]; then icon='Û∞Åø';	# nf-md-battery_60	\UF007F
			elif [ $charge -le 75 ]; then icon='Û∞ÇÄ';	# nf-md-battery_70	\UF0080
			elif [ $charge -le 85 ]; then icon='Û∞ÇÅ';	# nf-md-battery_80	\UF0081
			elif [ $charge -le 95 ]; then icon='Û∞ÇÇ';	# nf-md-battery_90	\UF0082
			else	# [ $charge -ge 96 ]
				icon='Û∞Åπ'			# nf-md-battery		\UF0079
			fi
			;;
	esac

	env printf $icon
}
get_emoji_icon(){
	status=$1
	capacity=$2
	case $status in
		Full ) icon='‚ö°' ;;
		Discharging | Charging )
			[ $capacity -gt 10 ] && icon='üîã' || icon='‚ùó'
			;;
		'Not charging' ) icon='üõë' ;;
		*) icon='‚ôª' ;;
	esac
	env printf $icon
}

#---- Money Shot----------------------------------------------------------------
case $UI_ICON in
	emoji)
		alias get_icon=get_emoji_icon
		ICON_ONLINE='üîå'
		ICON_OFFLINE='üõë'
		;;
	nerd | *)
		ICON_ONLINE='Û∞ö•'		# nf-md-power_plug	\UF06A5
		ICON_OFFLINE='Û∞ö¶'	# nf-md-power_plug_off	\UF06A6
		alias get_icon=get_nerd_icon ;;
esac
power_status=''

# Get AC Power Status
online=$(cat /sys/class/power_supply/AC/online)
[ "$online" -eq 1 ] && power_status="$ICON_ONLINE" || power_status="$ICON_OFFLINE"

for battery in /sys/class/power_supply/BAT? ; do
	capacity=$(cat "$battery"/capacity)
	status=$(cat "$battery"/status)
	icon=$(get_icon "$status" "$capacity")
	power_status="$power_status  $capacity%%  $icon  "
done
printf "$power_status \n"

#---- Debugging ----------------------------------------------------------------
debug(){
	for s in "Discharging" "Charging" ; do
		c=0
		while [ $c -le 100 ] ; do
			icon=$(get_icon $s $c)
			printf "$s %3d%% %s    " $c $icon
			[ $(( ($c + 1) % 7 )) -eq 0 ] && echo ""
			c=$(( $c + 1 ))
		done
		printf "\n\n\n"
	done
	s="Full"
	c="100"
	icon=$(get_icon $s $c)
	printf "$s %2d%% %s   " $c $icon
}

#debug

