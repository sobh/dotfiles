#!/bin/sh
# vim: filetype=sh
#
# Description:	Universal interactive shell-startup.
#
# put your aliases here
#

# If not running interactively, don't do anything
[ "$-" = "${-%i*}" ] && return

#---- Aliases ----------------------------------------------------------------------------------------------------------
alias aur='pacaur --noconfirm --noedit'
alias grep='grep --color=auto'
alias info='info --vi-keys'
alias l='ls '
alias la='ls -a'
alias ll='ls -l'
alias ls='ls --group-directories-first -X --human-readable --color=auto'
alias lsmovies='(ls /media/sdc5/sobh/movies; ls $HOME/movies;)'
#alias vim='nvim'
