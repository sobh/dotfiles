{
    "keyboard.dispatch": "keyCode",
    "explorer.sortOrder": "type",
    //---- Editor --------------------------------------------------------------
    "editor.cursorBlinking": "solid",
    "editor.fontSize": 16,
    "editor.fontLigatures": false,
    "editor.insertSpaces": false,
    "editor.minimap.enabled": false,
    "editor.tabSize": 8,
    "editor.rulers": [
        80,
        120
    ],
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            { // Italics
                "settings": {
                    "fontStyle": "italic"
                },
                "scope": [
                    "entity.name.class", // Class Names
                    "keyword", // import, export, return...
                    "constant", // String, Number, Booleanâ€¦, this, super
                    "storage.modifier", // static keyword
                    "storage.type.class.js" //class keyword
                ]
            },
            { // Normal
                "settings": {
                    "fontStyle": ""
                },
                "scope": [
                    "invalid",
                    "keyword.operator",
                    "constant.numeric.css",
                    "keyword.other.unit.px.css",
                    "constant.numeric.decimal.js",
                    "constant.numeric.json"
                ]
            }
        ]
    },
    "files.associations": {
        "*.zsh": "shellscript",
        "patch*": "diff"
    },
    "files.autoSave": "afterDelay",
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    //---- Extensions ----------------------------------------------------------
    //-------- Complete Line -----------
    "completeline.desiredCharacter": "-",
    "completeline.desiredLength": 40,
    "prettier.tabWidth": 4,
    "vscode-neovim.highlightGroups.unknownHighlight": {},
    "vscode-neovim.mouseSelectionStartVisualMode": true,
    "vscode-neovim.neovimInitPath": "$XDG_CONFIG_HOME/Code\\ -\\ OSS/init.vim",
    "vscode-neovim.neovimPath": "/usr/bin/nvim",
    "vscode-neovim.useCtrlKeysForNormalMode": false,
    //---- Languages -----------------------------------------------------------
    //-------- C/C++ -------------------
    "[C]": {
        "C_Cpp.default.includePath": "/usr/include"
    },
    //-------- Python ------------------
    "[python]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.defaultFormatter": "ms-python.python",
    },
    "python.autoComplete.addBrackets": true,
    "python.formatting.autopep8Args": [
        "--max-line-length=120"
    ],
    "python.jediEnabled": false,
    "python.linting.flake8Args": [
        "--ignore=E265,E305,E501"
    ],
    //-------- HTML --------------------
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    //-------- Javascript --------------
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    //-------- JSON --------------------
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    //-------- Zig ---------------------
    "[zig]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    //-------- Auto --------------------
    "editor.columnSelection": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.suggestSelection": "first",
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "editor.formatOnType": true,
    "workbench.iconTheme": "material-icon-theme",
    "terminal.integrated.fontSize": 16,
    "python.languageServer": "Default",
    "liveServer.settings.donotShowInfoMsg": true,
    "go.toolsManagement.autoUpdate": true,
    "window.zoomLevel": 2,
    "security.workspace.trust.untrustedFiles": "newWindow",
    "workbench.colorTheme": "GitHub Light Default",

}